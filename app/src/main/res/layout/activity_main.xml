<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TEAMA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEAM A"
        android:textSize="25sp"
        android:layout_marginLeft="45sp"
        android:layout_marginTop="20sp"/>

    <TextView
        android:id="@+id/TEAMB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEAM B"
        android:textSize="25sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45sp"
        android:layout_marginTop="20sp"/>

    <TextView
        android:id="@+id/TEAMA1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="70sp"
        android:layout_below="@+id/TEAMA"
        android:textColor="#000000"
        android:layout_marginLeft="75sp"/>

    <TextView
        android:id="@+id/TEAMB1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="70sp"
        android:textColor="#000000"
        android:layout_below="@+id/TEAMB"
        android:layout_alignParentRight="true"
        android:layout_marginRight="75sp"/>
    <Button
        android:id="@+id/scoreA3"
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:text="+3"
        android:textSize="21sp"
        android:textColor="#000000"
        android:layout_below="@+id/TEAMA1"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="40sp"
        android:onClick="incrementA3"
        android:background="#FFA726" />

    <Button
        android:id="@+id/scoreB3"
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:text="+3"
        android:textSize="21sp"
        android:textColor="#000000"
        android:layout_below="@+id/TEAMA1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25sp"
        android:layout_marginTop="40sp"
        android:onClick="incrementB3"
        android:background="#FFA726" />

    <Button
        android:id="@+id/scoreA2"
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:text="+2"
        android:textSize="21sp"
        android:textColor="#000000"
        android:layout_below="@+id/scoreA3"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="15sp"
        android:onClick="incrementA2"
        android:background="#FFA726" />

    <Button
        android:id="@+id/scoreB2"
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:text="+2"
        android:textSize="21sp"
        android:textColor="#000000"
        android:layout_below="@+id/scoreB3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25sp"
        android:layout_marginTop="15sp"
        android:onClick="incrementB2"
        android:background="#FFA726" />

    <Button
        android:id="@+id/scoreA1"
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:text="Freethrow"
        android:textSize="21sp"
        android:textColor="#000000"
        android:layout_below="@+id/scoreA2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="15sp"
        android:onClick="incrementA1"
        android:background="#FFA726" />

    <Button
        android:id="@+id/scoreB1"
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:text="Freethrow"
        android:textSize="21sp"
        android:textColor="#000000"
        android:layout_below="@+id/scoreB2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25sp"
        android:layout_marginTop="15sp"
        android:onClick="incrementB1"
        android:background="#FFA726" />

    <Button
        android:id="@+id/scoreR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="reset"
        android:textSize="21sp"
        android:textColor="#000000"
       android:layout_alignParentBottom="true"
        android:layout_margin="15sp"
        android:onClick="reset"
        android:background="#FFA726" />

</RelativeLayout>